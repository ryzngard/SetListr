@page "/songs/add"
@inject NavigationManager Navigation
@inject ISetListrDb Db

<FluentEditForm @ref="Form" Model="@_newSong" OnValidSubmit="SubmitAsync">
  <DataAnnotationsValidator />

  <FluentStack Orientation="Orientation.Vertical">
    <FluentTextField Name="@NameFieldName" Label="Name" @bind-Value="@_newSong.Name" />
    <FluentValidationMessage For="@(() => _newSong.Name)" />

    <TimeSpanPicker Label="Duration" @bind-Value="@_newSong.Duration" />
    <FluentValidationMessage For="@(() => _newSong.Duration)" />
  </FluentStack>

  <FluentButton Type="ButtonType.Submit">Add</FluentButton>
  <FluentButton type="ButtonType.Button" @onclick="GoBack">Cancel</FluentButton>
</FluentEditForm>

